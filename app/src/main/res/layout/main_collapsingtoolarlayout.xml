<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="300dp"
    app:layout_collapseParallaxMultiplier="0.5">

    <View
        android:id="@+id/main_toolbarBankSpace"
        android:background="@color/colorWhile"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <View
        android:background="@color/colorWhile"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <!--<Button
        android:text="点击开始检测"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />-->
    <android.support.constraint.ConstraintLayout
        android:layout_width="330dp"
        android:layout_height="210dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/layer_shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_toolbarBankSpace">

        <!--自定义一些组件时，要用定义的组件在xml中布局-->
        <com.example.power.mobile_health.Utils.Module.AnimatorButton
            android:id="@+id/main_checkButton"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="点击检测"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.power.mobile_health.Utils.Module.MainIndexAnimatorButton
            android:id="@+id/main_button_heartrate"
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pressedTranslationZ="12dp"/>

        <com.example.power.mobile_health.Utils.Module.MainIndexAnimatorButton
            android:id="@+id/main_button_temperature"
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:pressedTranslationZ="12dp"/>

        <com.example.power.mobile_health.Utils.Module.MainIndexAnimatorButton
            android:id="@+id/main_button_bloodPressure"
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.example.power.mobile_health.Utils.Module.MainIndexAnimatorButton
            android:id="@+id/main_button_bloodFat"
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.example.power.mobile_health.Utils.Module.MainIndexAnimatorButton
            android:id="@+id/main_button_weight"
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="76dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.example.power.mobile_health.Utils.Module.MainIndexAnimatorButton
            android:id="@+id/main_button_bloodOxygen"
            android:layout_width="240px"
            android:layout_height="240px"
            android:layout_marginStart="16dp"
            android:layout_marginTop="76dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
    <!--<FrameLayout
        android:background="@color/colorBlack"
