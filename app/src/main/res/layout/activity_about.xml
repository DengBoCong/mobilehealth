<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/colorWhile">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/aboutActivity_appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:elevation="0dp"
        android:background="@color/colorWhile"><!--app:elevation="0dp"去除底部的阴影-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/aboutActivity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:minHeight="?android:attr/actionBarSize"/>
        <com.example.power.mobile_health.UI.Utils.Module.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/login_logo"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="@string/app_name"
            android:textColor="@color/colorBlackLow"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="16dp"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="2.6.6.1"
            android:textColor="@color/colorNormalLow"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"/>
    </android.support.design.widget.AppBarLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@+id/aboutActivity_appBarLayout">
        <LinearLayout
            android:id="@+id/aboutActivity_centerUpdate"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="40dp"
            android:background="@color/colorWhile"
            android:layout_marginTop="0.5dp"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="检查更新"
                android:textColor="@color/colorBlackLow"
                android:textSize="18dp"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/aboutActivity_centerJudge"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@color/colorWhile"
            android:layout_marginTop="0.5dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutActivity_centerUpdate">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="给我们评分"
                android:textColor="@color/colorBlackLow"
                android:textSize="18dp"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="16dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_right_arrow_blackbackground"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/aboutActivity_centerVersion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@color/colorWhile"
            android:layout_marginTop="0.5dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutActivity_centerJudge">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="版本介绍"
                android:textColor="@color/colorBlackLow"
                android:textSize="18dp"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="16dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_right_arrow_blackbackground"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorWhile"
            android:layout_marginTop="0.5dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutActivity_centerVersion"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/aboutActivity_bottom">
        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/aboutActivity_bottomTop_service"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="服务条款"
                android:textSize="12dp"
                android:textColor="@color/colorMain"
                android:gravity="center_vertical|center_horizontal" />

            <View
                android:id="@+id/aboutActivity_bottomTop_Glid1"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorMain"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/aboutActivity_bottomTop_service"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/aboutActivity_bottomTop_allow"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="许可协议"
                android:textSize="12dp"
                android:textColor="@color/colorMain"
                android:gravity="center_vertical|center_horizontal"
                app:layout_constraintLeft_toRightOf="@+id/aboutActivity_bottomTop_Glid1"/>
            <View
                android:id="@+id/aboutActivity_bottomTop_Glid2"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorMain"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/aboutActivity_bottomTop_allow"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/aboutActivity_bottomTop_privacy"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="隐私政策"
                android:textSize="12dp"
                android:textColor="@color/colorMain"
                app:layout_constraintLeft_toRightOf="@+id/aboutActivity_bottomTop_Glid2"
                android:gravity="center_vertical|center_horizontal" />
            <View
                android:id="@+id/aboutActivity_bottomTop_Glid3"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorMain"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/aboutActivity_bottomTop_privacy"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="权利声明"
                android:textSize="12dp"
                android:textColor="@color/colorMain"
                android:gravity="center_vertical|center_horizontal"
                app:layout_constraintLeft_toRightOf="@+id/aboutActivity_bottomTop_Glid3"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/aboutActivity_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="陌梦工作室 版权所有"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="9dp"
            android:textColor="@color/colorNormalLow"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="CopyRight© 2018-2019 MoMeng.All Rights Reserved"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="9dp"
            android:textColor="@color/colorNormalLow"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>