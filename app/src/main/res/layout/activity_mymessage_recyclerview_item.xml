<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.example.power.mobile_health.UI.Utils.Module.CircleImageView
        android:id="@+id/mymessage_recyclerview_item_Image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mymessage_recyclerview_item_title"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:gravity="center_vertical|left"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/mymessage_recyclerview_item_Image"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/mymessage_recyclerview_item_content"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:gravity="center_vertical|left"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/mymessage_recyclerview_item_title"
        app:layout_constraintLeft_toRightOf="@+id/mymessage_recyclerview_item_Image"/>
</android.support.constraint.ConstraintLayout>